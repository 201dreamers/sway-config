### Variables ###

# Logo key
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Workspace names
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7

# Locker
set $locker swaylock-fancy

# Terminal emulator
set $term xfce4-terminal

# Application launcher
set $menu wofi 

# File manager
set $filer nautilus

# Browser
set $browser opera

# For gtk applications settings
set $gnomeschema org.gnome.desktop.interface

### Settings ###

# Font
font pango: SF Pro Text 10

# Borders
default_border pixel 2
hide_edge_borders none
smart_borders on
smart_gaps on
gaps inner 2

